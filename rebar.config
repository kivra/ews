%%-*- mode: erlang -*-

{deps, [ {hackney, {git, "git@github.com:benoitc/hackney.git", {tag, "1.17.4"}}}
       , {xmldsig, {git, "git@github.com:kivra/xmldsig.git", {branch, "handle-ns"}}}
       , {redbug, {git, "git@github.com:kivra/redbug.git", {branch, "kivra"}}}
       ]}.

{erl_opts, [debug_info]}.

{xref_checks, [undefined_function_calls]}.


%% Whether to enable coverage reporting.
{cover_enabled, true}.

%% Whether to print coverage report to console.
{cover_print_enabled, true}.

{profiles,
 [{test,
   [{deps, [{meck, "0.8.8"}]},
    {ct_opts, [
               {ct_hooks, [
                           cth_surefire,
                           cth_readable_failonly,
                           cth_readable_shell
                          ]}
              ]}
   ]}
 ]}.
